<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/reg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_20" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:text="Old Password"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/oldPAssEdittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/emailValidView"
                android:background="@drawable/rounded_edit_text"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="enter old password"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_12" >

                <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/textView2sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:text="New Password"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/newPAssEdittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/emailValidView"
                android:background="@drawable/rounded_edit_text"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="enter new password"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_12" >

            </EditText>
            <TextView
                android:id="@+id/textVisdafew2sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:text="Reenter New Password"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/conPasslEdittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/emailValidView"
                android:background="@drawable/rounded_edit_text"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="reenter new password"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


       </LinearLayout>

    <Button
        android:id="@+id/ButtonSubmit"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_height="45dp"
        android:layout_below="@+id/reg_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Change Password"
        android:textAllCaps="false"
        android:background="@drawable/card_rounded_threeside_bg"
        android:onClick="onClickConfirm" />

</RelativeLayout>